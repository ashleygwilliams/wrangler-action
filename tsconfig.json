{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": ["ESNext"],
    "types": ["node", "@cloudflare/workers-types"]
  },
  "exclude": ["node_modules", "**/*.test.ts"],
  "include": ["src/**/*.ts"]
}
